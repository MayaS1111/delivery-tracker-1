<div>
  <div>
    <h1>
      Delivery Tracker
    </h1>
    <p>Know if something gets lost in the mail.</p>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Expecting a package?
    </h2>

    <form action="/insert_package" method="post">
      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <div>
        <label for="supposed_to_arrive_box">
          Supposed to arrive
        </label>

        <input type="date" id="supposed_to_arrive_box" name="query_supposed_to_arrive">
      </div>

      <div>
        <label for="details_box">
          Details
        </label>

        <textarea id="details_box" name="query_details" rows="3"></textarea>
      </div>

      <button>
        Log delivery
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <h2>
      Waiting on
      <ul>
        <% @list_of_packages.each do |package|%>
        <li>
          <div>package.description</div>
          <div>package.supposed_to_arrive</div>
          <div>package.details</div>
          <form action="">
            <button>Mark as recived</button>
          </form>
        </li>
        <%end%>
      </ul>
    </h2>

  </div>
</div>

<hr>
